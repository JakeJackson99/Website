extends base

block content 

    div(class="container w-50")

        div(class="row")
            h1 <a href="/">Jake</a> / Contact 
        
        div(class="col-8 mt-3")

            form(id="contact-form" method="POST" action="send" enctype="multipart/form-data")
                div(class="form-group mb-3")
                    div(class="row")
                        div(class="col-md-6")
                            input(placeholder="Name" id="name" name="name" type="text" class="form-control" required)
                        div(class="col-md-6")
                            input(placeholder="Email" id="email" name="email" type="email" class="form-control" aria-describedby="emailHelp" required)
                div(class="form-group mb-3")
                    input(placeholder="Subject" id="subject" name="subject" type="text" class="form-control" required)
                div(class="form-group mb-3")
                    textarea(placeholder="Message" id="message" name="message" class="form-control" rows="3" required)
                button(type="submit" value="submit" class="btn btn-primary") Submit




    script(src="/js/index.js")